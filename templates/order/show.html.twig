{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>
    <div class="table-container">
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ order.total }}</td>
            </tr>
            <tr>
                <th>Items</th>
                <td>
                    {% for item in order.orderItems %}
                        <li>{{ item.item.title }}, {{ item.price }}</li>
                    {% endfor %}
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    <a href="{{ path('app_order_index') }}">back to list</a>
{% endblock %}
